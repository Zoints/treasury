{
  "name": "@zoints/treasury",
  "version": "1.1.1",
  "description": "The JavaScript library for the treasury",
  "source": "src/index.ts",
  "main": "build/treasury.js",
  "exports": {
    "require": "./build/treasury.cjs",
    "default": "./build/treasury.modern.js"
  },
  "module": "./build/treasury.module.js",
  "unpkg": "./build/treasury.umd.js",
  "types": "./build/treasury.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build" : "tsc -p . && npm run bundle",
    "bundle": "microbundle --target web --format umd --name zointsTreasury --external @solana/web3.js,bn.js,@solana/spl-token --globals @solana/web3.js=solanaWeb3",
    "lint": "eslint src",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-ci": "prettier --config .prettierrc 'src/**/*.ts' --list-different",
    "test": "mocha -r ts-node/register test/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zoints/treasury.git",
    "directory": "js"
  },
  "author": "Who Soup",
  "license": "UNLICENSED",
  "dependencies": {
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.30.2",
    "bn.js": "^5.2.0",
    "borsh": "^0.6.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/bn.js": "^4.11.6",
    "@types/bs58": "^4.0.1",
    "@types/chai": "^4.2.19",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "microbundle": "^0.14.2",
    "mocha": "^9.0.1",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
